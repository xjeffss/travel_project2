    <body>
        <h1>Welcome to TravelPedia</h1>

        <nav>
            <h2>Select a Destination</h2>
        </nav>
Country <select name="stateprovince">
  <% for (let i = 0; i<stateprovince.length; i++) {%>
    <option value="../<%=stateprovince[i].id%>" selected=<%=stateprovince[i]%>><%=stateprovince[i].country%>
    </option>
    <% } %>
    </select>
</br>
</br>
State or Province <select name="stateprovince">
  <% for (let i = 0; i<stateprovince.length; i++) {%>
    <option value="<%=stateprovince[i].id%>" selected=<%=stateprovince[i].id%>><%=stateprovince[i].stateName%>
    </option>
    <% } %>
</select>
</br>
</br>
Destination <select name="recommendation">
      <% for (let i = 1; i<recommendation.length; i++) {%>
    
        <option value="../<%=recommendation[i].id%>" selected=<%=recommendation[i]%>><%=recommendation.destination%>
        </option>
        <% } %>
    </select>
</br>
</br>
